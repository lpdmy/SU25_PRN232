@page "/Courses/Details/{id:int}"
@model ClientWeb.Pages.CourseDetailsModel
@{
    ViewData["Title"] = "Course Details";
}

@if (Model.Course == null)
{
    <div class="alert alert-danger">Course not found.</div>
}
else
{
    <div class="card">
        <div class="card-body">
            <h2>@Model.Course.Title</h2>
            <p><strong>Description:</strong> @Model.Course.Description</p>
            <p><strong>Category:</strong> @Model.Course.CategoryName</p>
            <p><strong>Author:</strong> @Model.Course.Author</p>
            <p><strong>Created At:</strong> @(Model.Course.CreatedAt.HasValue ? Model.Course.CreatedAt.Value.ToString("yyyy-MM-dd") : "N/A")</p>
            <form method="post">
                <button type="submit" class="btn btn-success">Register</button>
            </form>
        </div>
    </div>
    @if (Model.SuccessMessage != null)
    {
        <div class="alert alert-success mt-3">@Model.SuccessMessage</div>
    }
} 